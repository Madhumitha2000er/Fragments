
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
 <FlexBox id="idFlexBox" height="100%" justifyContent="Center" alignItems="Center">

        <items>

        <form:SimpleForm id="idSimpleForm" title="User Registration" editable="true"
        labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="3"
			columnsL="2"
			columnsM="2"
        >
        <form:content>
        <Label  text="Email" required="true"></Label>
        <Input type="Email" ></Input>

        <Label  text="Password" ></Label>
        <Input type="Password" ></Input>

        <Label  text="Retype Password" ></Label>
        <Input type="Password" ></Input>

        <Label  text="Full Name" ></Label>
        <Input  placeholder="FirstName"></Input>
        <Input  placeholder="LastName"></Input>

        <Label text="Gender"></Label>
        <RadioButtonGroup columns="2">
            <buttons>
               <RadioButton text="Male"></RadioButton>
               <RadioButton text="Female"></RadioButton>
            </buttons>
        </RadioButtonGroup>

        <Label text="Terms and Conditions"> </Label>
        <VBox >
            <items>
                <CheckBox text="I agree with terms and conditions"></CheckBox>
                 <CheckBox text="I want to receive the newsletter"></CheckBox>
            </items>  
        </VBox>

        <Button text="Save PDF" type="Default" ></Button>
        
        
        </form:content>
        
        
        </form:SimpleForm>

        
        
        
        </items>
</FlexBox>


</core:FragmentDefinition>